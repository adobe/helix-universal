{
  "name": "@adobe/helix-universal",
  "version": "2.0.0",
  "description": "Helix Universal",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "test": " nyc mocha --exit",
    "test-ci": "nyc mocha --exit --reporter xunit --reporter-options output=./junit/test-results.xml && codecov",
    "lint": "eslint .",
    "semantic-release": "semantic-release",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/*.js'  > docs/API.md",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-universal"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-universal/issues"
  },
  "homepage": "https://github.com/adobe/helix-universal#readme",
  "dependencies": {
    "@adobe/helix-epsagon": "1.6.9",
    "@adobe/helix-fetch": "3.0.0"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.3.2",
    "@google-cloud/secret-manager": "3.10.1",
    "@google-cloud/storage": "5.16.1",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "8.0.3",
    "ajv": "8.8.2",
    "aws-sdk": "2.1048.0",
    "codecov": "3.8.3",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.6.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.25.3",
    "fs-extra": "10.0.0",
    "ghooks": "2.0.4",
    "jsdoc-to-markdown": "7.1.0",
    "junit-report-builder": "3.0.0",
    "lint-staged": "12.1.4",
    "mocha": "9.1.3",
    "nyc": "15.1.0",
    "proxyquire": "2.1.3",
    "semantic-release": "18.0.1",
    "sinon": "12.0.1"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
