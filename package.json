{
  "name": "@adobe/helix-universal",
  "version": "3.0.4",
  "description": "Helix Universal",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "test": " nyc mocha",
    "test-ci": "nyc mocha && codecov",
    "lint": "eslint .",
    "semantic-release": "semantic-release",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-universal"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-universal/issues"
  },
  "mocha": {
    "spec": "test/**/*.test.js",
    "recursive": "true",
    "reporter": "mocha-multi-reporters",
    "reporter-options": "configFile=.mocha-multi.json"
  },
  "homepage": "https://github.com/adobe/helix-universal#readme",
  "dependencies": {
    "@adobe/helix-fetch": "3.0.3",
    "mocha-multi-reporters": "^1.5.1"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.3.2",
    "@google-cloud/secret-manager": "3.11.0",
    "@google-cloud/storage": "5.18.1",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "9.0.0",
    "aws-sdk": "2.1073.0",
    "codecov": "3.8.3",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.9.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.25.4",
    "fs-extra": "10.0.0",
    "ghooks": "2.0.4",
    "jsdoc-to-markdown": "7.1.1",
    "junit-report-builder": "3.0.0",
    "lint-staged": "12.3.3",
    "mocha": "9.2.0",
    "nock": "13.2.4",
    "nyc": "15.1.0",
    "proxyquire": "2.1.3",
    "semantic-release": "19.0.2",
    "sinon": "13.0.1"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
